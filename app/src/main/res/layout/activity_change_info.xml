<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_change_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="utils.dbconnected.ChangeInfoActivity">

    <!-- 버튼 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout">

        <Button
            android:background="#9adfff"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="취소"
            android:onClick="cancelChange"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/button4"
            android:layout_alignParentEnd="true" />

        <Button
            android:background="#9adfff"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="변경"
            android:onClick="changeInfo"
            android:layout_alignParentStart="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/button2" />
    </RelativeLayout>

    <!-- 비밀번호 확인 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/relativeLayout"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp"
        android:id="@+id/relativeLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 확인"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="11dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/textView7" />

        <EditText
            android:paddingStart="11dp"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/change_password_check"
            android:hint=" "
            android:inputType="textPassword"
            android:layout_below="@+id/textView7"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <!-- 비밀번호 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/relativeLayout2"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        android:id="@+id/relativeLayout3">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="11dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/textView4" />
        <EditText
            android:paddingStart="11dp"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/change_password"
            android:hint=" "
            android:inputType="textPassword"
            android:layout_below="@+id/textView4" />
    </RelativeLayout>

    <!-- 이름 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/relativeLayout3"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        android:id="@+id/relativeLayout5">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="11dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/textView3" />
        <EditText
            android:paddingStart="11dp"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/change_name"
            android:hint=" "
            android:layout_below="@+id/textView3"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <!-- ID -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/relativeLayout5"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="19dp"
        android:id="@+id/relativeLayout4">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="11dp"
                android:layout_marginBottom="5dp"
                android:text="ID(학번)"
                android:id="@+id/textView8" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/change_id"
            android:layout_below="@+id/textView8"
            android:layout_marginStart="11dp"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <!-- 이미지 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/relativeLayout4"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp">

        <ImageView
            android:background="#ffffff"
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:id="@+id/changeUserImage"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/button5" />

        <Button
            android:layout_margin="5dp"
            android:background="#9adfff"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="이미지 변경"
            android:onClick="changeImage"
            android:id="@+id/button5"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</RelativeLayout>
