<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="383dp"
        android:layout_above="@+id/relativeLayout18"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="22dp"
        android:layout_below="@+id/relativeLayout19"
        android:id="@+id/relativeLayout20">
        <EditText
            android:layout_marginTop="11dp"
            android:id="@+id/et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_weight="0.90"
            android:background="@drawable/xml_border"
            android:gravity="top"
            android:hint="내용을 입력하세요"
            android:inputType="text|textMultiLine"
            android:paddingStart="11dp"
            android:paddingTop="5dp"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1"
        android:id="@+id/relativeLayout17"
        android:layout_below="@+id/relativeLayout20"
        android:layout_alignParentStart="true">

    <Button
        android:id="@+id/bt_help"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:background="#9adfff"
        android:onClick="goMain"
        android:text="보내기"
        android:textColor="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="32dp" />
    </RelativeLayout>

</RelativeLayout>