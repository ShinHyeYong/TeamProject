<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/relativeLayout14">
        <TextView
            android:text="Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titleTV"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="20dp" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/relativeLayout14"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout15">

        <TextView
            android:layout_marginStart="11dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/timeTV"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="201dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/writerTV"
            android:layout_marginStart="199dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/timeTV" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="horizontal"
        android:id="@+id/relativeLayout13"
        android:layout_below="@+id/relativeLayout15"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/mainTV"
            android:layout_weight="0.11"
            android:layout_below="@+id/imageContent"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="27dp" />

        <ImageView
            android:background="#ffffff"
            android:layout_width="180dp"
            android:layout_height="130dp"
            android:id="@+id/imageContent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_below="@+id/relativeLayout13"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:id="@+id/relativeLayout16">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:onClick="submitComment"
            android:layout_marginEnd="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/button9" />

        <EditText
            android:layout_marginStart="11dp"
            android:paddingStart="11dp"
            android:hint="commentary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/commentary"
            android:layout_alignBottom="@+id/button9"
            android:layout_toStartOf="@+id/button9"
            android:layout_marginEnd="27dp" />

    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/commentList"
        android:layout_below="@+id/relativeLayout16"
        android:layout_alignParentStart="true">
    </ListView>
</RelativeLayout>
